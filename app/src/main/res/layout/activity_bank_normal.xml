<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".activity.my.BankNormalActivity">
    <include layout="@layout/comman_title"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="17dp"
            android:background="@drawable/bank_card"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_width="match_parent"
            android:layout_height="170dp" >
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="41dp"
                    android:padding="2dp"
                    android:background="@drawable/bc_my_tx_bc"
                    android:layout_height="41dp">
                    <com.huiminsheng.app.views.MyImagView_yuan
                        android:id="@+id/iv_bank_logo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="16dp"
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_bankName"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:gravity="center_vertical"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />
                    <TextView
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="储蓄卡"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_bank_number"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="26dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_ghcxk"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:text="更换储蓄卡"
            android:background="@drawable/shape_ghcxk"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/edit_font"
            android:layout_width="match_parent"
            android:layout_height="44dp" />
    </LinearLayout>
</LinearLayout>