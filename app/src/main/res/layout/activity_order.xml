<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activity.my.OrderActivity">
    <include layout="@layout/comman_title"/>
    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/stl"
        android:background="@color/white"
        android:layout_width="match_parent"
        app:tl_underline_color="@color/theme"
        app:tl_tab_space_equal="true"
        app:tl_indicator_width="40dp"
        app:tl_indicator_color="@color/theme"
        app:tl_textsize="14sp"
        app:tl_textSelectColor="@color/theme"
        app:tl_textUnselectColor="@color/font_dd_dz"
        android:layout_height="50dp">
    </com.flyco.tablayout.SlidingTabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>