<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.home.RankinglistActivity">
    <include layout="@layout/comman_title"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/contact_bg"
                    android:layout_width="match_parent"
                    android:layout_height="151dp" />
                <android.support.v7.widget.CardView
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_height="120dp">
                    <RelativeLayout
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginLeft="38dp"
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <com.huiminsheng.app.views.MyImagView_yuan
                                android:id="@+id/lv_phb"
                                android:layout_width="60dp"
                                android:layout_height="60dp" />
                            <TextView
                                android:id="@+id/tv_name"
                                android:textSize="12sp"
                                android:textColor="@color/phb_font"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_zsy"
                                android:textSize="25sp"
                                android:maxLines="1"
                                android:gravity="center"
                                android:maxWidth="90dp"
                                android:textColor="@color/phb_sy_font"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_marginTop="10dp"
                                android:text="总收益"
                                android:textSize="12sp"
                                android:layout_gravity="center"
                                android:maxLines="1"
                                android:maxWidth="90dp"
                                android:textColor="@color/phb_font"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginRight="38dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_dqpm"
                                android:textSize="23sp"
                                android:maxLines="1"
                                android:gravity="center"
                                android:maxWidth="90dp"
                                android:textColor="@color/phb_sy_font"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_marginTop="10dp"
                                android:text="当前排名"
                                android:textSize="12sp"
                                android:layout_gravity="center"
                                android:maxLines="1"
                                android:maxWidth="90dp"
                                android:textColor="@color/phb_font"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </FrameLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rl_phb"
                android:layout_width="match_parent"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>