<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".activity.my.AlipayAccountActivity">
    <include layout="@layout/comman_title"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/font_h"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="姓名"
                />


            <EditText
                android:id="@+id/et_realName"
                android:textColor="@color/comman_title"
                android:textColorHint="@color/grey_999999"
                android:textSize="15sp"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/login_edittext_gb"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:maxLines="1"
                android:background="@null"
                android:hint="请输入真实姓名"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/font_h"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="账号"
                />


            <EditText
                android:textColorHint="@color/grey_999999"
                android:textSize="15sp"
                android:textCursorDrawable="@drawable/login_edittext_gb"
                android:id="@+id/et_aliAccount"
                android:textColor="@color/comman_title"
                android:layout_width="match_parent"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:maxLines="1"
                android:background="@null"
                android:hint="请输入支付宝账号"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginLeft="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请确保账号信息准确无误"
        android:textColor="#FF6B23"
        android:textSize="12sp"
        />

    <TextView
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:id="@+id/tvAffirm"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:background="@drawable/selector_btn"
        android:gravity="center"
        android:textColor="@color/white"
        android:enabled="false"
        android:textSize="16sp"
        android:text="确认添加"/>
</LinearLayout>