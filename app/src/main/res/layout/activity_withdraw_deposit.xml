<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.my.WithdrawDepositActivity">
    <include layout="@layout/comman_title"/>
    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="12dp"
        android:paddingTop="18dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/font_h"
            android:text="提现金额"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="¥"
                android:textColor="@color/font_tx"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_price"
                android:layout_marginLeft="8dp"
                android:background="@null"
                android:textSize="24sp"
                android:focusable="true"
                android:maxLength="9"
                android:focusableInTouchMode="true"
                android:textCursorDrawable="@drawable/login_edittext_gb"
                android:hint="请输入金额"
                android:layout_width="match_parent"
                android:inputType="numberDecimal"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginTop="12dp"
            style="@style/settingfgx"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"/>
        <RelativeLayout
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_ktxye"
                android:textSize="13sp"
                android:textColor="@color/share_item_r"
                android:layout_marginRight="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_qbtx"
                android:textColor="@color/theme"
                android:layout_alignParentRight="true"
                android:text="全部提现"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_marked_words"
        android:paddingLeft="13dp"
        android:textColor="@color/share_item_r"
        android:gravity="center_vertical"
        android:textSize="12sp"
        android:text="* 银行卡提现手续费：每笔1元"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <TextView
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:id="@+id/tv_tx"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:background="@drawable/selector_btn"
        android:elevation="1dp"
        android:enabled="false"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="提现"/>


</LinearLayout>