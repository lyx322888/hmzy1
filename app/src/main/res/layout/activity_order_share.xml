<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.share.OrderShareActivity">
    <include layout="@layout/comman_title"/>
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:layout_height="wrap_content">
            <!--内容-->
            <LinearLayout
                android:id="@+id/ll_share_content"
                android:background="@drawable/around_conner_border"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/lv_order"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="702:468"
                        tools:ignore="MissingConstraints" />
                </android.support.constraint.ConstraintLayout>
                <RelativeLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="21dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_toLeftOf="@id/ll_ewm"
                        android:layout_marginRight="14dp"
                        android:orientation="vertical"
                        android:layout_marginLeft="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_normal_title"
                            android:textSize="14sp"
                            android:textColor="@color/font_h"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_normal_describe"
                            android:layout_width="match_parent"
                            android:maxLines="1"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/share_item_r"
                            android:textSize="12sp"
                            android:layout_centerInParent="true"
                            android:ellipsize="end"
                            android:layout_toLeftOf="@id/tv_normal_tag"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_normal_zdj"
                            android:ellipsize="end"
                            android:layout_marginTop="8dp"
                            android:maxLines="1"
                            android:textColor="@color/font_more"
                            android:textSize="11sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="25dp">
                            <TextView
                                android:text="¥"
                                android:layout_gravity="bottom"
                                android:gravity="bottom"
                                android:textSize="12sp"
                                android:layout_centerVertical="true"
                                android:maxLines="1"
                                android:textColor="@color/font_zscx_jg"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                            <TextView
                                android:gravity="bottom"
                                android:layout_marginLeft="4dp"
                                android:id="@+id/tv_normal_jg"
                                android:textColor="@color/font_zscx_jg"
                                android:textSize="17sp"
                                android:maxLines="1"
                                android:layout_width="100dp"
                                android:layout_height="match_parent" />
                            <TextView
                                android:layout_marginLeft="12dp"
                                android:id="@+id/tv_normal_tag"
                                android:gravity="center"
                                android:layout_gravity="bottom"
                                android:maxLines="1"
                                android:textSize="11sp"
                                android:textColor="@color/white"
                                android:ellipsize="end"
                                android:background="@mipmap/list_tag_2"
                                android:layout_width="60dp"
                                android:layout_height="20dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_ewm"
                        android:layout_marginRight="12dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/lv_qr_code"
                            android:layout_width="80dp"
                            android:layout_height="80dp" />
                        <TextView
                            android:gravity="center"
                            android:layout_marginTop="9dp"
                            android:text="识别二维码购买"
                            android:textSize="11sp"
                            android:textColor="@color/phb_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <!--分享按钮模块-->
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_marginTop="7dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:paddingLeft="12dp"
                android:orientation="vertical"
                android:paddingRight="12dp"
                android:background="@drawable/around_conner_border"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <View
                        android:background="@color/edit_font"
                        android:layout_width="50dp"
                        android:layout_height="1dp"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="链接分享到"
                        android:textSize="13sp"
                        android:textColor="@color/font_h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:background="@color/edit_font"
                        android:layout_width="50dp"
                        android:layout_height="1dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/ll_wx"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@mipmap/weixin_icon"
                            android:layout_width="33dp"
                            android:layout_height="33dp" />
                        <TextView
                            android:text="微信好友"
                            android:textSize="11sp"
                            android:textColor="@color/font_more"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_pyq"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@mipmap/img_pyq"
                            android:layout_width="33dp"
                            android:layout_height="33dp" />
                        <TextView
                            android:text="朋友圈"
                            android:textSize="11sp"
                            android:textColor="@color/font_more"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lv_qq"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@mipmap/img_qq"
                            android:layout_width="33dp"
                            android:layout_height="33dp" />
                        <TextView
                            android:text="QQ"
                            android:textSize="11sp"
                            android:textColor="@color/font_more"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_copy"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@mipmap/img_copy"
                            android:layout_width="33dp"
                            android:layout_height="33dp" />
                        <TextView
                            android:text="复制链接"
                            android:textSize="11sp"
                            android:textColor="@color/font_more"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>