<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".activity.home.PaymentSuccessActivity">
    <include layout="@layout/comman_title"/>
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@drawable/pay_bg"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="155dp">
                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="50dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/pay_icon"
                        android:layout_width="40dp"
                        android:scaleType="centerInside"
                        android:layout_height="40dp" />
                    <TextView
                        android:layout_marginLeft="7dp"
                        android:textSize="24sp"
                        android:text="支付成功"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:layout_marginTop="6dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <!--卡号-->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_kh"
                android:orientation="vertical"
                android:layout_marginTop="61dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="卡号"
                            android:textColor="@color/share_item_r"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_card_number"
                            android:layout_marginLeft="12dp"
                            android:textColor="@color/font_h"
                            android:textSize="17sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_copy_card"
                            android:layout_marginLeft="6dp"
                            android:textColor="@color/share_item_r"
                            android:text="复制"
                            android:background="@drawable/shape_rectangle_wxz_textview"
                            android:textSize="11sp"
                            android:layout_width="45dp"
                            android:gravity="center"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_height="20dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="17dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="密码"
                            android:textColor="@color/share_item_r"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_card_psw"
                            android:layout_marginLeft="12dp"
                            android:textColor="@color/font_h"
                            android:textSize="17sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_copy_psw"
                            android:layout_marginLeft="6dp"
                            android:textColor="@color/share_item_r"
                            android:text="复制"
                            android:background="@drawable/shape_rectangle_wxz_textview"
                            android:textSize="11sp"
                            android:layout_width="45dp"
                            android:gravity="center"
                            android:layout_height="20dp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_marginTop="17dp"
                    android:gravity="center"
                    android:textColor="@color/share_item_r"
                    android:text="（卡密信息在“订单详情”中查看）"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <!--普通订单-->
            <LinearLayout
                android:id="@+id/ll_normal"
                android:visibility="visible"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="61dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="订单编号"
                            android:textColor="@color/share_item_r"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_order_number"
                            android:layout_marginLeft="12dp"
                            android:minWidth="100dp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:maxWidth="220dp"
                            android:textColor="@color/share_item_r"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_copy_order_number"
                            android:layout_marginLeft="6dp"
                            android:textColor="@color/share_item_r"
                            android:text="复制"
                            android:background="@drawable/shape_rectangle_wxz_textview"
                            android:textSize="11sp"
                            android:layout_width="45dp"
                            android:gravity="center"
                            android:layout_height="20dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="17dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="交易时间"
                            android:textColor="@color/share_item_r"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_time"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginLeft="12dp"
                            android:textColor="@color/share_item_r"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:id="@+id/tv_jxgw"
                android:layout_marginTop="100dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/selector_btn"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="继续购物"/>
            <TextView
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:id="@+id/tv_ckdd"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/shape_rectangle_wxz_textview"
                android:gravity="center"
                android:textColor="@color/share_item_r"
                android:textSize="16sp"
                android:text="查看订单"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>