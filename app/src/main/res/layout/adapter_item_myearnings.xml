<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    android:id="@+id/rl_my_wdsc"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="44dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/lv_img"
        android:padding="13dp"
        android:layout_width="44dp"
        android:layout_height="44dp" />
    <TextView
        android:id="@+id/tv_title"
        android:layout_toRightOf="@id/lv_img"
        android:gravity="center_vertical"
        android:textColor="@color/font_earings"
        android:layout_marginRight="60dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/tv_enrings_r"
        android:textColor="@color/font_earings"
        android:textSize="15sp"
        android:ellipsize="end"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/lv_r_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/lv_r_img"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        style="@style/settingBack" />
</RelativeLayout>