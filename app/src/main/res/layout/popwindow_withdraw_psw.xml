<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/rl_down"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageView
            android:id="@+id/lv_exit"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/clear_input"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <TextView
            android:text="请输入密码"
            android:textColor="@color/font_h"
            android:textSize="17sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        style="@style/settingfgx"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        />
    <TextView
        android:id="@+id/tv_money"
        android:textColor="@color/font_h"
        android:textSize="15sp"
        android:text="提现金额"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.huiminsheng.app.views.TransactionPasswordView
        android:id="@+id/tpv_jyma"
        android:layout_width="245dp"
        android:background="@color/white"
        android:maxLines="6"
        android:layout_gravity="center_horizontal"
        android:layout_height="45dp" />
    <TextView
        android:id="@+id/tv_wjmm"
        android:paddingRight="12dp"
        android:gravity="right"
        android:text="忘记密码？"
        android:textColor="@color/theme"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            style="@style/settingfgx"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            />
        <com.huiminsheng.app.views.KeyboardView
            android:id="@+id/kv_jp"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="200dp">
        </com.huiminsheng.app.views.KeyboardView>

    </LinearLayout>
</LinearLayout>